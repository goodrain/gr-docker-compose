#!/bin/sh
SOURCE_BIN=`which docker-compose`
YAML_FILE="/etc/goodrain/docker-compose.yaml"
if [ -z "$SOURCE_BIN" ];then
	echo "docker-compose not found"
	exit 1
fi

if [ "$1" == "restart" ];then
  $SOURCE_BIN -f $YAML_FILE stop $2
  cclear
  $SOURCE_BIN -f $YAML_FILE up -d $2
else
  eval "$SOURCE_BIN -f $YAML_FILE $@"
fi
